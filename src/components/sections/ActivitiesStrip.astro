---
/**
 * ActivitiesStrip â€” Compact icon tiles, single row on desktop.
 */
import ScrollReveal from '@/components/ui/ScrollReveal.astro';

interface Activity {
  title: string;
  description: string;
  icon: string;
  href: string;
}

interface Props {
  eyebrow: string;
  title: string;
  activities: Activity[];
}

const { eyebrow, title, activities } = Astro.props;
---

<section class="bg-sand-50 section-breathe-lg">
  <div class="container-page">
    <ScrollReveal>
      <span class="eyebrow">{eyebrow}</span>
      <h2 class="mt-3 text-3xl md:text-4xl lg:text-5xl font-display font-semibold text-ocean-800 tracking-tight">
        {title}
      </h2>
    </ScrollReveal>

    <div class="mt-10 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4">
      {activities.map((activity, i) => (
        <ScrollReveal animation="fade-up" delay={i * 60}>
          <a
            href={activity.href}
            class="group relative flex flex-col items-center text-center p-5 rounded-2xl bg-white border border-sand-200 hover:border-adriatic-400 transition-all duration-300 hover:shadow-md"
          >
            <span class="text-3xl md:text-4xl transition-transform duration-300 group-hover:scale-110">
              {activity.icon}
            </span>
            <h3 class="mt-3 text-sm font-semibold text-ocean-700 group-hover:text-adriatic-400 transition-colors">
              {activity.title}
            </h3>
            <p class="mt-1 text-xs text-stone/60 line-clamp-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 max-h-0 group-hover:max-h-20 overflow-hidden">
              {activity.description}
            </p>
          </a>
        </ScrollReveal>
      ))}
    </div>
  </div>
</section>
