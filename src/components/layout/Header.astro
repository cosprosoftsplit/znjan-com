---
import type { Language } from '@/lib/i18n';
import { ROUTE_SEGMENTS, getHomeUrl, getLocalizedUrl, DEFAULT_LANGUAGE } from '@/lib/i18n';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Language;
  translations: Record<string, string>;
}

const { lang, translations } = Astro.props;

const navItems = [
  { key: 'guides', label: translations['nav.guides'] || 'Guides' },
  { key: 'places', label: translations['nav.places'] || 'Places' },
  { key: 'activities', label: translations['nav.activities'] || 'Activities' },
  { key: 'beach-areas', label: translations['nav.beachAreas'] || 'Beach Areas' },
  { key: 'events', label: translations['nav.events'] || 'Events' },
];
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-warm-200 shadow-sm">
  <div class="container-page">
    <nav class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={getHomeUrl(lang)} class="flex items-center gap-2 text-ocean-600 font-bold text-xl hover:text-ocean-700 transition-colors">
        <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="16" cy="16" r="15" fill="url(#ocean-gradient)" />
          <path d="M8 18c2-3 4-3 6 0s4 3 6 0 4-3 6 0" stroke="white" stroke-width="2" stroke-linecap="round" />
          <path d="M8 14c2-3 4-3 6 0s4 3 6 0 4-3 6 0" stroke="white" stroke-width="1.5" stroke-linecap="round" opacity="0.6" />
          <circle cx="16" cy="8" r="3" fill="#FFD93D" />
          <defs>
            <linearGradient id="ocean-gradient" x1="0" y1="0" x2="32" y2="32">
              <stop stop-color="#0077B6" />
              <stop offset="1" stop-color="#00B4D8" />
            </linearGradient>
          </defs>
        </svg>
        <span>Znjan</span>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-6">
        {navItems.map((item) => (
          <a
            href={getLocalizedUrl(lang, item.key)}
            class="text-sm font-medium text-warm-600 hover:text-ocean-600 transition-colors"
          >
            {item.label}
          </a>
        ))}
        <LanguageSwitcher lang={lang} />
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-warm-600 hover:text-ocean-600 focus:outline-none focus:ring-2 focus:ring-ocean-500 focus:ring-offset-2 transition-colors"
        aria-label={translations['nav.menu'] || 'Menu'}
        aria-expanded="false"
        aria-controls="mobile-menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-warm-200">
    <div class="container-page py-4 space-y-3">
      {navItems.map((item) => (
        <a
          href={getLocalizedUrl(lang, item.key)}
          class="block py-2 text-warm-600 hover:text-ocean-600 font-medium transition-colors"
        >
          {item.label}
        </a>
      ))}
      <div class="pt-3 border-t border-warm-200">
        <LanguageSwitcher lang={lang} />
      </div>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    const isHidden = menu?.classList.toggle('hidden');
    btn.setAttribute('aria-expanded', String(!isHidden));
  });
</script>
