---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className } = Astro.props;
---

<div class:list={['text-center mb-10', className]}>
  <h2 class="text-3xl md:text-4xl font-bold text-ocean-800 tracking-tight">
    {title}
  </h2>
  {subtitle && (
    <p class="mt-3 text-lg text-warm-500 max-w-2xl mx-auto">
      {subtitle}
    </p>
  )}
</div>
