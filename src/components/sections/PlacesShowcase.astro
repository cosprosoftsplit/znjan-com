---
/**
 * PlacesShowcase — Horizontal scroll showcase of featured places.
 * Left-aligned with container, scrolls to right edge.
 */
import ScrollReveal from '@/components/ui/ScrollReveal.astro';

interface PlaceCard {
  title: string;
  description: string;
  category: string;
  categoryLabel: string;
  href: string;
  variant: 'ocean' | 'sunset' | 'sand' | 'coral' | 'adriatic';
  image?: string;
  credit?: string;
}

interface Props {
  eyebrow: string;
  title: string;
  viewAllText: string;
  viewAllHref: string;
  places: PlaceCard[];
}

const { eyebrow, title, viewAllText, viewAllHref, places } = Astro.props;

const gradientMap: Record<string, string> = {
  ocean: 'linear-gradient(135deg, #0077B6 0%, #023e8a 40%, #0096c7 100%)',
  sunset: 'linear-gradient(135deg, #e07d6a 0%, #f4a261 50%, #e76f51 100%)',
  sand: 'linear-gradient(135deg, #d4c4a8 0%, #b8a88a 50%, #c9b896 100%)',
  coral: 'linear-gradient(135deg, #e07d6a 0%, #c1574a 50%, #e9967a 100%)',
  adriatic: 'linear-gradient(135deg, #2d8a9b 0%, #0077B6 50%, #48cae4 100%)',
};

const variants: ('ocean' | 'sunset' | 'sand' | 'coral' | 'adriatic')[] = ['ocean', 'adriatic', 'sunset', 'coral', 'sand'];
---

<section class="section-breathe-lg overflow-hidden">
  {/* Header aligned with container */}
  <div class="container-page">
    <ScrollReveal>
      <div class="flex items-end justify-between gap-4">
        <div>
          <span class="eyebrow">{eyebrow}</span>
          <h2 class="mt-3 text-3xl md:text-4xl lg:text-5xl font-display font-semibold text-ocean-800 tracking-tight">
            {title}
          </h2>
        </div>
        <a
          href={viewAllHref}
          class="hidden sm:inline-flex items-center gap-1 text-sm font-medium text-adriatic-400 hover:text-adriatic-500 transition-colors whitespace-nowrap"
        >
          {viewAllText}
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </ScrollReveal>
  </div>

  {/* Horizontal scroll — left-padded to container, overflows right */}
  <div class="mt-10 scroll-snap-x gap-5 pl-4 sm:pl-6 lg:pl-[max(2rem,calc((100vw-80rem)/2+2rem))] pr-4">
    {places.map((place, i) => {
      const variant = place.variant || variants[i % variants.length];
      const gradient = gradientMap[variant];

      return (
        <a
          href={place.href}
          class="group relative block w-[320px] md:w-[380px] rounded-2xl overflow-hidden flex-shrink-0"
        >
          {/* Image/Placeholder */}
          <div class="relative aspect-[4/3]">
            {place.image ? (
              <>
                <img src={place.image} alt="" class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" loading="lazy" />
                {place.credit && (
                  <span class="absolute bottom-1 right-1 px-1.5 py-0.5 text-[9px] text-white/60 bg-black/30 backdrop-blur-sm rounded z-10">
                    {place.credit}
                  </span>
                )}
              </>
            ) : (
              <div class="absolute inset-0 transition-transform duration-500 group-hover:scale-105" style={`background: ${gradient}`}>
                <svg class="absolute inset-0 w-full h-full opacity-10" preserveAspectRatio="none" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
                  <path d="M0 150 Q50 100 100 150 T200 150 T300 150 T400 150" fill="none" stroke="white" stroke-width="2" />
                </svg>
              </div>
            )}

            {/* Gradient overlay */}
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/10 to-transparent"></div>

            {/* Category badge */}
            <div class="absolute top-4 left-4">
              <span class="inline-block px-3 py-1 text-xs font-semibold uppercase tracking-wider bg-white/90 text-ocean-700 rounded-full">
                {place.categoryLabel}
              </span>
            </div>
          </div>

          {/* Text content */}
          <div class="p-5 bg-white">
            <h3 class="text-lg font-display font-semibold text-ocean-800 group-hover:text-adriatic-400 transition-colors">
              {place.title}
            </h3>
            <p class="mt-2 text-sm text-stone line-clamp-2">
              {place.description}
            </p>
          </div>
        </a>
      );
    })}

    {/* "View All" end card */}
    <a
      href={viewAllHref}
      class="group flex flex-col items-center justify-center w-[280px] md:w-[320px] rounded-2xl border-2 border-dashed border-sand-200 hover:border-adriatic-400 transition-colors duration-300 flex-shrink-0"
    >
      <div class="text-center p-8">
        <div class="w-12 h-12 mx-auto rounded-full bg-sand-50 flex items-center justify-center group-hover:bg-adriatic-400/10 transition-colors">
          <svg class="w-6 h-6 text-adriatic-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </div>
        <span class="mt-3 block text-sm font-medium text-adriatic-400">
          {viewAllText}
        </span>
      </div>
    </a>
  </div>
</section>
