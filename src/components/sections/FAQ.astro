---
import type { Language } from '@/lib/i18n';
import { getLocalized } from '@/lib/i18n';

interface FAQItem {
  question: Record<Language, string>;
  answer: Record<Language, string>;
}

interface Props {
  items: FAQItem[];
  lang: Language;
  title?: string;
}

const { items, lang, title } = Astro.props;
---

<section class="container-page py-12">
  {title && (
    <h2 class="text-2xl md:text-3xl font-bold text-ocean-800 mb-8 text-center">{title}</h2>
  )}

  <div class="max-w-3xl mx-auto space-y-4">
    {items.map((item, index) => (
      <details class="group bg-white rounded-xl border border-warm-200 shadow-sm overflow-hidden">
        <summary class="flex items-center justify-between px-6 py-4 cursor-pointer hover:bg-warm-50 transition-colors list-none">
          <h3 class="text-base font-semibold text-ocean-700 pr-4">
            {getLocalized(item.question, lang)}
          </h3>
          <svg
            class="w-5 h-5 text-warm-400 flex-shrink-0 transition-transform group-open:rotate-180"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <div class="px-6 pb-4 text-warm-600 text-sm leading-relaxed border-t border-warm-100 pt-4">
          {getLocalized(item.answer, lang)}
        </div>
      </details>
    ))}
  </div>
</section>
