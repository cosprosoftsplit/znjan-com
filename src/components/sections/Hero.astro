---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
}

const { title, subtitle, ctaText, ctaHref, secondaryCtaText, secondaryCtaHref } = Astro.props;
---

<section class="relative bg-ocean-800 text-white overflow-hidden">
  <!-- Subtle gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-ocean-900/60 via-ocean-800/40 to-adriatic-400/20"></div>

  <div class="container-page relative z-10 py-24 md:py-36">
    <div class="max-w-3xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-semibold tracking-tight leading-[1.2]">
        {title}
      </h1>
      <p class="mt-6 text-lg md:text-xl text-cream/80 max-w-2xl leading-relaxed">
        {subtitle}
      </p>
      {(ctaText || secondaryCtaText) && (
        <div class="mt-10 flex flex-wrap gap-4">
          {ctaText && ctaHref && (
            <a
              href={ctaHref}
              class="inline-flex items-center px-6 py-3 rounded-lg bg-coral-400 text-white font-semibold uppercase tracking-wider hover:bg-coral-500 transition-colors duration-200"
            >
              {ctaText}
            </a>
          )}
          {secondaryCtaText && secondaryCtaHref && (
            <a
              href={secondaryCtaHref}
              class="inline-flex items-center px-6 py-3 rounded-lg border-2 border-white/30 text-white font-semibold hover:border-white/60 transition-colors duration-200"
            >
              {secondaryCtaText}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</section>
